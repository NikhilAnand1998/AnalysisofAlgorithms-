<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/blackballone"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_below="@+id/ball"
        android:layout_marginTop="-108dp"
        android:layout_toStartOf="@+id/blackballtwo"
        app:srcCompat="@drawable/bball" />

    <ImageView
        android:id="@+id/blackballtwo"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_below="@+id/ball"
        android:layout_marginTop="-108dp"
        android:layout_toStartOf="@+id/blackballthree"
        app:srcCompat="@drawable/bball" />

    <ImageView
        android:id="@+id/blackballthree"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_below="@+id/ball"
        android:layout_marginTop="-108dp"
        android:layout_toStartOf="@+id/blackballfour"
        app:srcCompat="@drawable/bball" />

    <ImageView
        android:id="@+id/blackballfour"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_below="@+id/ball"
        android:layout_marginTop="-108dp"
        android:layout_toStartOf="@+id/blackballfive"
        app:srcCompat="@drawable/bball" />

    <ImageView
        android:id="@+id/blackballfive"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:layout_below="@+id/ball"
        android:layout_marginTop="-108dp"
        android:layout_toStartOf="@+id/blackballsix"
        app:srcCompat="@drawable/bball" />

    <ImageView
        android:id="@+id/blackballsix"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ball"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="-108dp"
        app:srcCompat="@drawable/bball" />

    <LinearLayout
        android:id="@+id/runsdisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:text="Team A" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:inputType="number"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:text="0" />

            <ImageView
                android:id="@+id/team_a_bat_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:src="@drawable/cricketbat"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:text="Runs" />


            <Button
                android:id="@+id/btnfour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="4 Runs" />

            <Button
                android:id="@+id/btnsix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="6 Runs" />

            <Button
                android:id="@+id/btnwide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="Wide" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:text="Team B" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:text="0" />

            <ImageView
                android:id="@+id/team_b_bat_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:src="@drawable/cricketbat"
                android:visibility="invisible"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/runsdisplay">

        <ToggleButton
            android:id="@+id/btnwhobats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textOff="Team A Bats"
            android:textOn="Team B Bats" />

    </LinearLayout>

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/over"
        android:text="Reset" />

    <TextView
        android:id="@+id/over"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="172dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Current Over: "
        android:textColor="#616161"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ball"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="108dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Last Ball: "
        android:textColor="#616161"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/over_numb"
        android:layout_width="228dp"
        android:layout_height="89dp"
        android:layout_above="@+id/ball"
        android:layout_toEndOf="@+id/ball"
        android:layout_toRightOf="@+id/ball"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:inputType="number"
        android:paddingBottom="24dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="56sp" />

    <TextView
        android:id="@+id/ball_numb"
        android:layout_width="238dp"
        android:layout_height="87dp"
        android:layout_below="@+id/over"
        android:layout_marginTop="-172dp"
        android:layout_toEndOf="@+id/ball"
        android:layout_toRightOf="@+id/ball"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:inputType="number"
        android:paddingBottom="24dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="56sp" />


</RelativeLayout>

