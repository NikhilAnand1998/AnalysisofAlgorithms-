<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/runsdisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamAname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="Team A"
                android:textColor="#616161"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:inputType="number"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:text="0" />

            <ImageView
                android:id="@+id/team_a_bat_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:src="@drawable/cricketbat"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="20sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:text="Statistics" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Over: "
                    android:textColor="#616161"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/over_numb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Outs: "
                    android:textColor="#616161"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/outnumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="0" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamBname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="Team B"
                android:textColor="#616161"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:text="0" />

            <ImageView
                android:id="@+id/team_b_bat_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:src="@drawable/cricketbat"
                android:visibility="invisible"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ballsimagedisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/runsdisplay"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blackballone"
            android:layout_width="55dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/bball" />

        <ImageView
            android:id="@+id/blackballtwo"
            android:layout_width="55dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/bball" />

        <ImageView
            android:id="@+id/blackballthree"
            android:layout_width="55dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/bball" />

        <ImageView
            android:id="@+id/blackballfour"
            android:layout_width="55dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/bball" />

        <ImageView
            android:id="@+id/blackballfive"
            android:layout_width="55dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/bball" />

        <ImageView
            android:id="@+id/blackballsix"
            android:layout_width="55dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/bball" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/runoptionscontainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/ballsimagedisplay">

        <Button
            android:id="@+id/btnone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Run" />

        <Button
            android:id="@+id/btntwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Runs" />

        <Button
            android:id="@+id/btnthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Runs" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/runoptionscontainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/runoptionscontainer1">

        <Button
            android:id="@+id/btnfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Runs" />

        <Button
            android:id="@+id/btnfive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Runs" />

        <Button
            android:id="@+id/btnsix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Runs" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/runoptionscontainer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/runoptionscontainer2">

        <Button
            android:id="@+id/btnwide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wide" />

        <Button
            android:id="@+id/btnout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out" />

        <Button
            android:id="@+id/btnnoball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Ball" />

    </LinearLayout>

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Reset" />

    <ToggleButton
        android:id="@+id/btnwhobats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textOff="Team A Bats"
        android:textOn="Team B Bats" />

</RelativeLayout>

