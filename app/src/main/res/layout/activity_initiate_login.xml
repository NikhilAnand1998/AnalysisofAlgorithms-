<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InitiateLogin">

    <EditText
        android:id="@+id/teamone"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Team 1 Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/teamtwo"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teamone"
        android:ems="10"
        android:hint="Team 2 Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/maxovers"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="179dp"
        android:ems="10"
        android:hint="Number of Overs"
        android:inputType="number" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/teamone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="122dp"
        android:text="Submit" />

    <RadioGroup
        android:id="@+id/rggroup"
        android:layout_width="151dp"
        android:layout_height="113dp"
        android:layout_alignTop="@+id/teamone"
        android:layout_toEndOf="@+id/teamone">

        <RadioButton
            android:id="@+id/teamonebat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/teamtwobat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />

    </RadioGroup>

    <TextView
        android:id="@+id/batsfirst"
        android:layout_width="151dp"
        android:layout_height="71dp"
        android:layout_above="@+id/teamone"
        android:layout_marginBottom="-80dp"
        android:layout_toEndOf="@+id/teamone"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Bats First"
        android:textColor="#616161"
        android:textSize="20sp" />

</RelativeLayout>